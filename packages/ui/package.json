{
  "name": "@lab/ui",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "types": "tsc --noEmit",
    "lint": "oxlint",
    "format": "oxfmt"
  },
  "exports": {
    "./theme.css": "./src/theme.css",
    "./components/*": {
      "types": "./src/components/*.tsx",
      "default": "./src/components/*.tsx"
    },
    "./utils/*": {
      "types": "./src/utils/*.ts",
      "default": "./src/utils/*.ts"
    },
    "./hooks/*": {
      "types": "./src/hooks/*.ts",
      "default": "./src/hooks/*.ts"
    }
  },
  "typesVersions": {
    "*": {
      "components/*": [
        "src/components/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ]
    }
  },
  "peerDependencies": {
    "next": ">=14",
    "react": "^19",
    "react-dom": "^19"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "next": "^16",
    "oxfmt": "0.27.0",
    "oxlint": "1.42.0",
    "typescript": "^5"
  }
}
